<div class="container">
        
    <div class="row">
        <div class="col-md-5">
            <div class="card-body">
                <form action="/add" method="POST">
                    <div class="form-group">
                        <input type="text" name="title" placeholder="Insertar titulo" class="form-control">
                    </div>
                    <div class="form-group">
                        <textarea name="description" cols="80" placeholder="insertar description" class="form-control"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Add</button>
                </form>
            </div>
        </div>
        <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>

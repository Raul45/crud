                            </th>
                            <th>
                                Operation
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i = 0; i < tasks.length; i++) { %>
                            <tr>
                            <td><%= i + 1 %></td>
                            <td><%= tasks[i].title %>  </td>
                            <td><%= tasks[i].description %>  </td>
                            <td>
                                <a href="/turn/<%= tasks[i]._id %>" class="btn <%= tasks[i].status ? 'btn-success' : 'btn-dark' %>">
                                    Done
                                </a>
                                <a href="/delete/<%= tasks[i]._id %>" class="btn btn-danger">x</a>
                                <a href="/edit/<%= tasks[i]._id %>" class="btn btn-info">Edit</a>
                            </td>
                            <% } %>
                       
                        </tr>
                        </tbody>
                </table>
                </div>
